model OkrCheckinAgendaItem {
  id              String    @id @default(cuid())
  okrCheckinId    String
  order           Int
  type            String    // STANDUP | BLOCKERS | OKR_REVIEW | PROJECT_HEALTH | DISCUSSION
  title           String
