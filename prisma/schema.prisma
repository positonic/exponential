//  Workflow Pipeline Engine 

model WorkflowTemplate {
  id              String   @id @default(cuid())
  slug            String   @unique
  name            String
  description     String   @db.Text
  category        String
  triggerTypes    String[]
  configSchema    Json
  stepDefinitions Json
  isSystem        Boolean  @default(true)
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  definitions WorkflowDefinition[]
}

model WorkflowDefinition {
  id           String    @id @default(cuid())
  workspaceId  String
  createdById  String
  templateId   String?
  name         String
  description  String?
  config       Json
  triggerType  String    @default("manual")
  cronSchedule String?
  isActive     Boolean   @default(true)
  lastRunAt    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  workspace Workspace         @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  createdBy User              @relation("WorkflowDefinitionCreatedBy", fields: [createdById], references: [id])
  template  WorkflowTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  steps     WorkflowStep[]
  runs      WorkflowPipelineRun[]

  @@index([workspaceId])
  @@index([templateId])
  @@index([triggerType])
}

model WorkflowStep {
  id           String   @id @default(cuid())
  definitionId String
  order        Int
  type         String
  label        String
  config       Json     @default("{}")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  definition WorkflowDefinition @relation(fields: [definitionId], references: [id], onDelete: Cascade)
  stepRuns   WorkflowStepRun[]

  @@index([definitionId])
  @@unique([definitionId, order])
}

model WorkflowPipelineRun {
  id            String    @id @default(cuid())
  definitionId  String
  triggeredById String?
  status        String    @default("RUNNING")
  input         Json?
  output        Json?
  errorMessage  String?
  startedAt     DateTime  @default(now())
  completedAt   DateTime?
  metadata      Json?

  definition    WorkflowDefinition @relation(fields: [definitionId], references: [id], onDelete: Cascade)
  triggeredBy   User?              @relation("WorkflowPipelineRunTriggeredBy", fields: [triggeredById], references: [id])
  stepRuns      WorkflowStepRun[]
  contentDrafts ContentDraft[]

  @@index([definitionId])
  @@index([status])
}

model WorkflowStepRun {
  id           String    @id @default(cuid())
  runId        String
  stepId       String
  status       String    @default("PENDING")
  input        Json?
  output       Json?
  errorMessage String?
  startedAt    DateTime?
  completedAt  DateTime?
  durationMs   Int?

  run  WorkflowPipelineRun @relation(fields: [runId], references: [id], onDelete: Cascade)
  step WorkflowStep        @relation(fields: [stepId], references: [id], onDelete: Cascade)

  @@index([runId])
  @@index([stepId])
}

model ContentDraft {
  id                String    @id @default(cuid())
  workspaceId       String
  createdById       String
  pipelineRunId     String?
  title             String
  content           String    @db.Text
  platform          String
  status            String    @default("DRAFT")
  assistantId       String?
  tone              String?
  version           Int       @default(1)
  previousVersionId String?
  wordCount         Int?
  metadata          Json?
  publishedAt       DateTime?
  publishedUrl      String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  workspace       Workspace            @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  createdBy       User                 @relation("ContentDraftCreatedBy", fields: [createdById], references: [id])
  pipelineRun     WorkflowPipelineRun? @relation(fields: [pipelineRunId], references: [id], onDelete: SetNull)
  assistant       Assistant?           @relation(fields: [assistantId], references: [id], onDelete: SetNull)
  previousVersion ContentDraft?        @relation("ContentDraftVersions", fields: [previousVersionId], references: [id], onDelete: SetNull)
  newerVersions   ContentDraft[]       @relation("ContentDraftVersions")

  @@index([workspaceId])
  @@index([pipelineRunId])
  @@index([platform])
  @@index([status])
}

// ============================================
// AI Product Manager Agent Models
// ============================================

model GitHubActivity {
  id              String    @id @default(cuid())
  workspaceId     String
  integrationId   String

  // Event data
  eventType       String    // "push", "pull_request", "pull_request_review"
  eventAction     String?   // "opened", "merged", "closed", "submitted", etc.
  externalId      String    // GitHub delivery ID or commit SHA or PR node_id
  deliveryId      String?   // x-github-delivery header for dedup

  // Commit data (for push events)
  commitSha       String?
  commitMessage   String?   @db.Text
  commitAuthor    String?
  commitUrl       String?
  branchName      String?

  // PR data (for pull_request events)
  prNumber        Int?
  prTitle         String?
  prState         String?   // "open", "closed", "merged"
  prUrl           String?
  prAuthor        String?
  prMergedAt      DateTime?
  prReviewState   String?   // "approved", "changes_requested", "commented"
  prReviewer      String?

  // Repository
  repoFullName    String
  repoUrl         String?

  // Mapping to internal entities
  actionId        String?
  mappingMethod   String?   // "explicit", "branch", "semantic", "manual"
  mappingConfidence Float?

  // Timestamps
  eventTimestamp  DateTime
  createdAt       DateTime  @default(now())

  workspace       Workspace   @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  integration     Integration @relation(fields: [integrationId], references: [id], onDelete: Cascade)
  action          Action?     @relation(fields: [actionId], references: [id], onDelete: SetNull)

  @@unique([externalId, eventType])
  @@index([workspaceId])
  @@index([integrationId])
  @@index([actionId])
  @@index([eventTimestamp])
  @@index([repoFullName])
  @@index([branchName])
}

model SprintSnapshot {
  id              String   @id @default(cuid())
  listId          String
  snapshotDate    DateTime @db.Date

  // Counts by kanban status
  backlogCount    Int      @default(0)
  todoCount       Int      @default(0)
  inProgressCount Int      @default(0)
  inReviewCount   Int      @default(0)
  doneCount       Int      @default(0)
  cancelledCount  Int      @default(0)

  // Effort tracking
  totalEffort     Float    @default(0)
  completedEffort Float    @default(0)
  addedEffort     Float    @default(0) // Effort added after sprint start (scope creep)

  // Velocity
  actionsCompleted Int     @default(0)

  // GitHub activity summary
  commitsCount    Int      @default(0)
  prsOpened       Int      @default(0)
  prsMerged       Int      @default(0)
  prsReviewed     Int      @default(0)

  createdAt       DateTime @default(now())

  list            List     @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@unique([listId, snapshotDate])
  @@index([listId])
  @@index([snapshotDate])
}

model SprintMetrics {
  id              String    @id @default(cuid())
  listId          String    @unique

  // Velocity
  plannedEffort   Float     @default(0)
  completedEffort Float     @default(0)
  velocity        Float     @default(0)

  // Throughput
  plannedActions  Int       @default(0)
  completedActions Int      @default(0)
  addedActions    Int       @default(0)
  removedActions  Int       @default(0)

  // Cycle times (averages in hours)
  avgCycleTime    Float?    // Average time from TODO to DONE
  avgLeadTime     Float?    // Average time from BACKLOG to DONE
  avgReviewTime   Float?    // Average time in IN_REVIEW

  // GitHub metrics
  totalCommits    Int       @default(0)
  totalPRs        Int       @default(0)
  avgPrTurnaround Float?   // Average hours from PR open to merge

  // Completion
  completionRate  Float?

  calculatedAt    DateTime  @default(now())

  list            List      @relation(fields: [listId], references: [id], onDelete: Cascade)

  @@index([listId])
}

model ActionStatusChange {
  id          String        @id @default(cuid())
  actionId    String
  fromStatus  ActionStatus?
  toStatus    ActionStatus
  changedById String?
  changedAt   DateTime      @default(now())

  action      Action        @relation(fields: [actionId], references: [id], onDelete: Cascade)

  @@index([actionId])
  @@index([changedAt])
  @@index([toStatus])
}

model PMAgentConfig {
  id                String   @id @default(cuid())
  userId            String   @unique
  workspaceId       String

  // Feature flags
  enabled           Boolean  @default(true)

  // Standup configuration
  standupEnabled    Boolean  @default(true)
  standupTime       String   @default("08:30")

  // Wrapup configuration
  wrapupEnabled     Boolean  @default(true)
  wrapupTime        String   @default("18:00")

  // Sprint review configuration
  sprintReviewEnabled Boolean @default(true)
  sprintReviewDay   Int      @default(5) // Day of week (1=Mon, 5=Fri)
  sprintReviewTime  String   @default("15:00")

  // Risk monitoring
  riskCheckEnabled  Boolean  @default(true)
  riskCheckInterval Int      @default(4) // Hours between risk checks

  // Notification preferences
  preferredChannel  String   @default("whatsapp") // "whatsapp" | "slack" | "email"

  // Behavior preferences
  verbosity         String   @default("normal") // "concise" | "normal" | "detailed"
  includeGitHub     Boolean  @default(true)
  includeKanban     Boolean  @default(true)

  // Timezone
  timezone          String   @default("UTC")

  // Workflow definition references
  standupDefinitionId      String?
  wrapupDefinitionId       String?
  sprintReviewDefinitionId String?
  riskCheckDefinitionId    String?

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace         Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([workspaceId])
}

// ============================================
// Deal Pipeline Models
// ============================================

model PipelineStage {
  id        String   @id @default(cuid())
  projectId String
  name      String
  color     String   @default("blue")
  order     Int
  type      String   @default("active") // "active" | "won" | "lost"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  deals   Deal[]

  @@unique([projectId, order])
  @@index([projectId])
}

model Deal {
  id                String    @id @default(cuid())
  projectId         String
  stageId           String
  title             String
  description       String?   @db.Text
  value             Float?
  currency          String    @default("USD")
  probability       Int?
  expectedCloseDate DateTime?
  closedAt          DateTime?
  stageOrder        Int       @default(0)

  // CRM links
  contactId      String?
  organizationId String?

  // Ownership
  workspaceId String
  createdById String
  assignedToId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project      Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  stage        PipelineStage    @relation(fields: [stageId], references: [id])
  contact      CrmContact?      @relation(fields: [contactId], references: [id], onDelete: SetNull)
  organization CrmOrganization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  workspace    Workspace        @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  createdBy    User             @relation("DealCreatedBy", fields: [createdById], references: [id])
  assignedTo   User?            @relation("DealAssignedTo", fields: [assignedToId], references: [id])
  activities   DealActivity[]

  @@index([projectId])
  @@index([stageId])
  @@index([contactId])
  @@index([organizationId])
  @@index([workspaceId])
}

model DealActivity {
  id        String   @id @default(cuid())
  dealId    String
  userId    String?
  type      String // "STAGE_CHANGE" | "NOTE" | "VALUE_CHANGE" | "CREATED" | "CLOSED"
  content   String?  @db.Text
  metadata  Json?
  createdAt DateTime @default(now())

  deal Deal  @relation(fields: [dealId], references: [id], onDelete: Cascade)
  user User? @relation("DealActivityUser", fields: [userId], references: [id])

  @@index([dealId])
  @@index([createdAt])
}
